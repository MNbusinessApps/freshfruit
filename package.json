{
  "name": "free-fruit-unified",
  "version": "1.0.0",
  "main": "index.js",
  "description": "Free Fruit - Sports Intelligence Platform (Web + Mobile)",
  "scripts": {
    "start": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "build": "expo export",
    "build:web": "expo export --platform web",
    "build:ios": "expo export --platform ios",
    "build:android": "expo export --platform android",
    "eject": "expo eject",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx src/",
    "test": "jest"
  },
  "keywords": [
    "react-native",
    "expo",
    "sports",
    "analytics",
    "web",
    "mobile"
  ],
  "author": "MiniMax Agent",
  "license": "MIT",
  "private": true,
  "dependencies": {
    "expo": "^49.0.0",
    "expo-status-bar": "~1.6.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-native": "0.72.6",
    "react-native-safe-area-context": "4.6.3",
    "react-native-screens": "~3.22.0",
    "react-native-web": "~0.19.6",
    "@react-navigation/native": "^6.1.7",
    "@react-navigation/drawer": "^6.6.3",
    "@react-native-async-storage/async-storage": "1.18.2"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@expo/webpack-config": "^19.0.0",
    "babel-preset-expo": "^9.5.0",
    "eslint": "^8.46.0",
    "eslint-config-expo": "^7.0.0",
    "jest": "^29.2.1",
    "jest-expo": "^49.0.0",
    "prettier": "^3.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "homepage": ".",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/free-fruit-unified.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/free-fruit-unified/issues"
  },
  "directories": {
    "doc": "docs"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "expo": {
    "name": "Free Fruit",
    "slug": "free-fruit-unified",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#0B132B"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.yourcompany.freefruit",
      "buildNumber": "1"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#0B132B"
      },
      "package": "com.yourcompany.freefruit",
      "versionCode": 1
    },
    "web": {
      "bundler": "metro",
      "favicon": "./assets/favicon.png",
      "meta": {
        "description": "Free Fruit - Sports Intelligence Platform"
      }
    },
    "plugins": [
      [
        "expo-build-properties",
        {
          "android": {
            "enableProguardInReleaseBuilds": true,
            "enableSeparateBuildPerCPUArchitecture": true
          },
          "ios": {
            "enableBitcode": false
          }
        }
      ]
    ],
    "scheme": "freefruit"
  }
}